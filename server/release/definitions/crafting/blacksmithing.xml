	<menu id="BLACKSMITHING_WEAPONS_swords">
		<name>Swords</name>
		
		<action type="resource">
			<name>Broad sword</name>
			<model>0x0F5E</model>
			<description>Craft a broad sword with this option. You can select different materials for this item if you are skilled enough and have the necessary resources!</description>
			<make resource="RESOURCE_INGOT">
				<useitem amount="5" />
				<makeitem section="weapons_swords_broad" amount="1" />
				<skillcheck skillid="7" min="350" max="850" />
				<skillcheck skillid="4" min="180" max="500" />
			</make>
		</action>
		<action type="resource">
			<name>Viking sword</name>
			<model>0x13B9</model>
			<description>Craft a viking sword with this option.</description>
			<make resource="RESOURCE_INGOT">
				<useitem amount="6" />
				<makeitem section="weapons_swords_viking" amount="1" name="iron viking sword" />
				<skillcheck skillid="7" min="400" max="850" />
				<skillcheck skillid="4" min="200" max="500" />
