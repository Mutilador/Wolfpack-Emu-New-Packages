		<skin><random list="SKINS_HUMAN" /></skin>
		<saycolor><random min="2" max="1000" /></saycolor>
        <wandertype>1</wandertype>
		<direction><random min="0" max="7" /></direction> <!-- Facing a random direction -->
 
