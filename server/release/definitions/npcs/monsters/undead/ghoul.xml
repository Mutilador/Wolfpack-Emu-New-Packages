<definitions>

	<!-- a ghoul -->
	<npc id="ghoul" inherit="undead_base">
		<name>ghoul</name>
		<id>153</id>
		<karma><random list="KARMA_L2" /></karma>
		<fame><random list="FAME_L2" /></fame>
		<!-- Stats -->
		<str><random min="76" max="100"/></str>
