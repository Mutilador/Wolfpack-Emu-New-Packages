<definitions>

	<!-- a harpy -->
	<npc id="harpy" inherit="monster_base">
		<name>harpy</name>
		<id>30</id>
		<inherit id="KARMA_L2" />
		<inherit id="FAME_L2" />
		<!-- Stats -->
		<str><random min="96" max="120"/></str>
		<dex><random min="86" max="110"/></dex>
		<int><random min="51" max="75"/></int>
		<maxhitpoints><random min="58" max="72" /></maxhitpoints>
