		<skill id="evaluatingintelligence"><random min="601" max="725"/></skill>
		<skill id="magery"><random min="601" max="725"/></skill>
		<skill id="magicresistance"><random min="601" max="750"/></skill>
		<skill id="tactics"><random min="501" max="650"/></skill>
		<skill id="wrestling"><random min="401" max="500"/></skill>
