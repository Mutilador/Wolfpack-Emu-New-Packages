<definitions>

	<!-- Deathwatch beetle -->
	<npc id="deathwatch_beetle" inherit="animal_base">
		<name>A Deathwatch Beetle</name>
		<!-- <ai>Animal_Wild</ai> -->
		<id>242</id>
		<inherit id="KARMA_L2" />
		<inherit id="FAME_L2" />
		<!-- Stats -->
		<str><random min="135" max="160" /></str>
		<dex><random min="40" max="55" /></dex>
		<int><random min="30" max="40" /></int>
		<!-- Status -->
		<maxhitpoints><random min="120" max="130" /></maxhitpoints>
		<maxmana>20</maxmana>
		<!-- Damage -->
		<mindamage>10</mindamage>
		<maxdamage>21</maxdamage>
		<!-- Defense -->
		<tag name="res_physical" value="35,40" type="int" />
		<tag name="res_fire" value="15,30" type="int" />
		<tag name="res_cold" value="15,30" type="int" />
		<tag name="res_poison" value="50,80" type="int" />
		<tag name="res_energy" value="20,35" type="int" />
		<!-- Skills -->
		<skill id="wrestling"><random min="500" max="600"/></skill>
		<skill id="tactics"><random min="650" max="800"/></skill>
		<skill id="magicresistance"><random min="500" max="600"/></skill>
		<skill id="anatomy"><random min="300" max="350"/></skill>
		<!-- Loot Packs -->
		<!-- Needs Bonsai Seed -->
		<backpack>
			<content>
				<item list="POTIONS"><amount>1</amount></item>
			</content>
		</backpack>
		<lootpacks>scroll_low</lootpacks>
		<!-- Misc. -->
		<controlslots>1</controlslots>
		<mintaming>411</mintaming>
		<strproperty name="food" value="1" />
		<bindmenu>tame_menu,pet_menu</bindmenu>
		<category>Monsters\SE\Deathwatch Beetle</category>
		<!-- Carve -->
		<intproperty name="carve_hides" value="8" />
	</npc>

</definitions>
