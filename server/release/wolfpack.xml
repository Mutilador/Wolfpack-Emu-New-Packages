  <!--
  This group configures the account management.
  -->
  <group name="Accounts">

    <!--  If active login attempts with non-existing login names will create a new account automatically
    This is very usefull for new shards without account policy  -->
    <option key="Auto Create" value="false"/>
    <option key="Auto Create ACL" value="player"/>

    <!--  If active, will convert older plain text passwords into MD5 hash  -->
    <option key="Automatically Hash Loaded Passwords" value="false"/>

    <!--  Possible values are: sqlite, mysql, oci for oracle, odbc, psql for PostgreSQL, tds for Sybase Adaptative Server, db2 for IBM DB2 (v7.1 or higher), sqlite2 for Sqlite version 2.x and ibase for Borland Interbase
    Avaliable drivers depends on your Qt Instalation thought  -->
    <option key="Database Driver" value="sqlite"/>
    <option key="Database Host" value=""/>
    <option key="Database Name" value="accounts.db"/>
    <option key="Database Password" value=""/>
    <option key="Database Port" value="3306"/>
    <option key="Database Username" value=""/>
    <option key="Enable Individual Number for Characters Slots" value="false"/>

    <!--  Should not be more than 6, due to client restrictions  -->
    <option key="Maximum Number of Characters" value="7"/>

    <!--  This will store hashed passwords, increasing password security.  -->
    <option key="Use MD5 Hashed Passwords" value="false"/>
  </group>

